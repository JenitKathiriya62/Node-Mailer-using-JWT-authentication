<h2>Reset Password</h2>

<%
    if(typeof error !== 'undefined'){
        %>
            <h3 style="color: red;"><%= error %></h2>
        <%
    }
%>


<form action="reset-password?token=<%= resetData.token %>" method="POST">
    <input type="hidden" name="user_id" value="<%= resetData.user_id %>">
    <input type="password" name="password" required placeholder="New password"> <br><br>
    <input type="password" name="c_password" required placeholder="Confirm password"> <br><br>
    <input type="submit" value="Reset Password">
</form>